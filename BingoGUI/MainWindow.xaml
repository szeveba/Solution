<Window x:Class="BingoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BingoGUI"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="Bingo" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Kártya generálása" Click="Button_Click" Margin="5"/>
        <Grid Grid.Row="1" x:Name="G" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"></Grid>
        <TextBox Grid.Row="2" x:Name="TBName" Text="bingo.txt" Margin="5"/>
        <Button Grid.Row="3" Content="Mentés" Click="Save" Margin="5"/>
    </Grid>
</Window>
